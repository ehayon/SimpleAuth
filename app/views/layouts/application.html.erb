<!DOCTYPE html>
<html>
<head>
  <title>SimpleAuth</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="header">
		<div class="text"><p>Simple Authentication System</p></div>

		<div class="button_holder">
			<% if current_user %>
				<span class="email_text"><%= current_user.email %></span>
				<%= link_to "Logout", logout_path, :class => "button" %>				
			<% else %>
				<%= link_to "Login", login_path, :class => "button" %>
				<%= link_to "Sign Up", signup_path, :class => "button" %>
			<% end %>
		</div>
	</div>

	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}", :class => "notice" %>
	<% end %>
	<div id="content">
		<%= yield %>
	</div>	
</body>
</html>
